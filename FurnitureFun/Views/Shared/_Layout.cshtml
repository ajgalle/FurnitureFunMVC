<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Furniture Fun </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            @Html.ActionLink("View the Customer Site", "Index", "Home", null, new { @class = "btn btn-block btn-success" })
            @Html.ActionLink("View the Order Fufillment Site", "Index", "Orders", null, new { @class = "btn btn-block btn-primary" })
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="https://ajgalle.github.io/" target="_blank">Andrew J. Galle</a> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
