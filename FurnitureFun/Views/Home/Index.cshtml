@model List<FurnitureFun.Models.Furniture>

@{
    ViewBag.Title = "Welcome to FurnitureFun";
}

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" roll="listbox">
            <div class="carousel-item item active">
                <div class="carousel-caption">
                    <h2 style="text-shadow: 2px 2px black"> Welcome to Furniture Fun. </h2>
                </div>
                <img class="d-block w-100 img-fluid" src="~/Images/fulKitchen2000x1325.jpeg" alt="Welcome">
            </div>
            <div class="carousel-item item">
                <div class="carousel-caption">
                    <h2 style="text-shadow:2px 2px black"> Browse the gallery. </h2>
                </div>
                <img class="d-block w-100 img-fluid" src="~/Images/largeBedroom2000x1325.jpeg" alt="Bedroom">
            </div>

            <div class="carousel-item item">
                <div class="carousel-caption">
                    <h2 style="text-shadow:2px 2px black"> Save with us. </h2>
                </div>
                <img class="d-block w-100 img-fluid" src="~/Images/fulKitchen2000x1325.jpeg" alt="Kitchen">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div>
     <h1 class="text-center">Featured Offers</h1>
        @foreach (var item in Model)
        {
            <div class="col-md-3 text-center">
                <a href="/Home/Detail/@item.Id">
                    <img src="~/Images/@item.ImageFileName" alt="@item.Name" class="img-responsive" style="margin:auto;padding:10px 0 0 0" />
                    <h4> @item.Name $@item.Price </h4>
                </a>

            </div>
        }
    </div>
</div>